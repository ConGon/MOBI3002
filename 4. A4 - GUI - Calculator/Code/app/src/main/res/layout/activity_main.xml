<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connor's Calculator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editText_Num1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Number 1"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editText_Num2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Number 2"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/editText_Num1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/b_Add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/add_icon"
        android:background="?attr/selectableItemBackground"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:contentDescription="Add"
        app:layout_constraintTop_toBottomOf="@id/editText_Num2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b_Subtract"
        android:layout_margin="8dp"/>

    <ImageButton
        android:id="@+id/b_Subtract"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/subtract_icon"
        android:background="?attr/selectableItemBackground"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:contentDescription="Subtract"
        app:layout_constraintTop_toBottomOf="@id/editText_Num2"
        app:layout_constraintStart_toEndOf="@id/b_Add"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <ImageButton
        android:id="@+id/b_Multiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/multiply_icon"
        android:background="?attr/selectableItemBackground"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:contentDescription="Multiply"
        app:layout_constraintTop_toBottomOf="@id/b_Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b_Divide"
        android:layout_margin="8dp"/>

    <ImageButton
        android:id="@+id/b_Divide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/divide_icon"
        android:background="?attr/selectableItemBackground"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:contentDescription="Divide"
        app:layout_constraintTop_toBottomOf="@id/b_Subtract"
        app:layout_constraintStart_toEndOf="@id/b_Multiply"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/editTextNumAns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Answer"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@id/b_Multiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
